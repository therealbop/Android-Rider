<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff">

    <include layout="@layout/layout_custom_action_bar"
        android:id="@+id/ll_fragment_action_bar"/>

    <RelativeLayout
        android:id="@+id/rlCardImage"
        android:layout_width="700dp"
        android:layout_height="200dp"
        android:background="@drawable/card_details_card"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_below="@+id/ll_fragment_action_bar"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tvDotText"
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="wrap_content"
            android:text="@string/stars"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dimen_90dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/tv_deleteCard_cardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/tvDotText"
            android:layout_toEndOf="@+id/tvDotText"
            android:layout_alignBaseline="@+id/tvDotText"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/tv_deleteCard_cardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:layout_below="@+id/tv_deleteCard_cardNumber"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:textStyle="bold"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/tv_deleteCard_expiryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/expiry"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/tv_deleteCard_expiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/tv_deleteCard_expiryLabel"
            android:layout_toEndOf="@+id/tv_deleteCard_expiryLabel"
            android:layout_alignBaseline="@+id/tv_deleteCard_expiryLabel"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginStart="@dimen/dimen_5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <ImageView
            android:id="@+id/iv_delete_card"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/dimen_22dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_default_card_SetAs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="true"
        android:layout_below="@+id/rlCardImage"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/establishmentlayout"
            android:id="@+id/rl_deleteCard_termsConds"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/cbDeleteCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"/>
            <!-- android:theme="@style/checkBoxStyle"-->

            <TextView
                android:id="@+id/tv_deleteCard_termsConds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carddflttxt"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/cbDeleteCard"
                android:layout_toEndOf="@+id/cbDeleteCard"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:visibility="visible"
                android:gravity="center" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
