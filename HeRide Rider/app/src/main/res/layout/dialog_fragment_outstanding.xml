<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_last_dues_texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_22dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_last_dues_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_25sp"
            android:textColor="@color/vehicle_unselect_color" />

        <TextView
            android:id="@+id/tv_last_dues_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_17sp"
            android:textColor="@color/light_black"
            android:layout_marginTop="@dimen/dimen_20dp" />

        <TextView
            android:id="@+id/tv_last_dues_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_17sp"
            android:textColor="@color/text_color_rate" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:gravity="bottom"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_last_dues_texts"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_last_dues_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textSize="@dimen/text_size_19sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/dimen_12dp"
            android:layout_gravity="bottom"
            android:background="@color/pick_up_later" />

        <TextView
            android:id="@+id/tv_last_dues_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:textSize="@dimen/text_size_19sp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:padding="@dimen/dimen_12dp"
            android:background="@drawable/selector_layout" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>