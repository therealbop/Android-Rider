<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_background"
    android:orientation="vertical">

    <DatePicker
        android:id="@+id/btn_time_picker_datePicker"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar"
        android:layout_marginTop="@dimen/dimen_15dp"/>

    <TimePicker
        android:id="@+id/btn_time_picker_timePicker"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimen_15dp"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_time_picker_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textSize="@dimen/text_size_19sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="@dimen/dimen_12dp"
            android:layout_gravity="bottom"
            android:background="@color/pick_up_later" />

        <Button
            android:id="@+id/btn_time_picker_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:textSize="@dimen/text_size_19sp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:padding="@dimen/dimen_12dp"
            android:background="@drawable/selector_layout" />
    </LinearLayout>
</LinearLayout>