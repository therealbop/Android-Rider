<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="@dimen/dimen_3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp">

        <ImageView
            android:id="@+id/iv_favorite_driver_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_favorite_red"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dimen_5dp"/>

        <RelativeLayout
            android:id="@+id/rl_favorite_driver_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_30dp">

            <ImageView
                android:id="@+id/iv_favorite_driver_image"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp"
                android:scaleType="fitXY"
                android:src="@drawable/signup_profile_default_image" />

            <ProgressBar
                android:id="@+id/pb_favorite_driver_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_favorite_driver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingStart="@dimen/dimen_5dp"
            android:paddingRight="@dimen/dimen_5dp"
            android:paddingEnd="@dimen/dimen_5dp"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@color/vehicle_unselect_color"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_below="@+id/rl_favorite_driver_profile"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>