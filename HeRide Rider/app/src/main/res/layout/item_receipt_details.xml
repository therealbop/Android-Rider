<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/tv_receipt_details_divider"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/divider_invoice"/>

    <TextView
        android:id="@+id/tv_receipt_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dskfnjkfnvf"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_receipt_details_divider"
        android:textColor="@color/grayTextColor"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_receipt_details_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dskfnjkfnvf"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        android:textSize="@dimen/text_size_12sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_receipt_details_divider"
        android:textColor="@color/grayTextColor"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>