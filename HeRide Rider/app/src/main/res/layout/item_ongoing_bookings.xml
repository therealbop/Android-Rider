<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_home_bottom_live_book"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_home_bottom_live_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_11sp"
        android:textColor="@color/live_track_bg"
        android:gravity="center|start"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingStart="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:paddingBottom="@dimen/dimen_5dp"
        android:textDirection="locale"
        android:textAlignment="viewStart"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp_selector"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp_selector"
        android:background="@color/bg_color" />

    <View
        android:id="@+id/vw_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@+id/tv_home_bottom_live_book"
        android:background="@color/divider1" />
</RelativeLayout>
