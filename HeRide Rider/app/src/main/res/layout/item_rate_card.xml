<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_5dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/iv_rc_vehicleImage"
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="@dimen/dimen_60dp"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:contentDescription="@string/app_name" />
                <TextView
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingStart="@dimen/dimen_5dp"
                    android:layout_gravity="center_vertical"
                    android:textAllCaps="true"
                    android:id="@+id/tv_rate_item_vehicle_type"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_size_26sp"
                    android:textColor="@color/karru_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_10sp"
                    android:textColor="@color/brown"
                    android:id="@+id/tv_rate_item_minFare_label"
                    android:text="@string/min_fare"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text_size_14sp"
                    android:text="dlknvjkfnvkjb"
                    android:textColor="@color/light_black"
                    android:id="@+id/tv_rate_item_minFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/text_size_10sp"
                    android:textColor="@color/brown"
                    android:id="@+id/tv_rate_item_capacity_label"
                    android:text="@string/capacity"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/light_black"
                    android:id="@+id/tv_rate_item_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/text_size_10sp"
                    android:textColor="@color/brown"
                    android:id="@+id/tv_rate_item_60min_label"
                    android:text="@string/min60"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/light_black"
                    android:id="@+id/tv_rate_item_60min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/text_size_10sp"
                    android:textColor="@color/brown"
                    android:id="@+id/tv_rate_item_2mi_label"
                    android:text="@string/mi2"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/light_black"
                    android:id="@+id/tv_rate_item_2mi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dimen_5dp"
                android:id="@+id/rl_rate_item_dimen"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_10sp"
                    android:textColor="@color/brown"
                    android:id="@+id/tv_rate_item_lbh_label"
                    android:text="@string/lbh"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/text_size_14sp"
                    android:textColor="@color/light_black"
                    android:id="@+id/tv_rate_item_lbh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>